@model IEnumerable<Category>
@{
    Layout = "_AdminLayout";
}

<h2>Categorys</h2>

<a asp-action="AddCategory" asp-controller="Category" class="btn btn-primary">Add More</a>

<table class="table table-striped my-2" style="width : 600px">
    <tr>
        <th>Category</th>
        <th>Action</th>
    </tr>

    @foreach(var category in Model)
    {
        <tr>
            <td class ="col col-8 fw-semibold">@category.CategoryName</td>
            <td class="">
                <a asp-action="UpdateCategory" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-success"><i class="bi bi-pen"></i> Edit</a>
                <a asp-action="DeleteCategory" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-danger" onclick="return window.confirm('Are you sure?')"><i class="bi bi-trash-fill"></i> Delete</a>
            </td>
        </tr>
    }
</table>

